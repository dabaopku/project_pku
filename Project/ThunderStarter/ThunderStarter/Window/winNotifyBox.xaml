<Window x:Class="ThunderStarter.winNotifyBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    WindowStyle="None" ResizeMode="NoResize" Background="Transparent" 
    AllowsTransparency="True" ShowInTaskbar="False"
     Width="210" Height="250"
     Loaded="Window_Loaded"
     Deactivated="Window_Deactivated">
    
    <Border BorderBrush="DarkCyan" Background="AliceBlue" 
            BorderThickness="2" CornerRadius="5,5,5,5"  Padding="1">
        <StackPanel Name="Container" Orientation="Vertical">
            <StackPanel.LayoutTransform>
                <RotateTransform Angle="180"/>
            </StackPanel.LayoutTransform>
        </StackPanel>
    </Border>
</Window>
