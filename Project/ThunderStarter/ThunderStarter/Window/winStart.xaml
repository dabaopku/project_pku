<Window x:Class="ThunderStarter.winStart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="frmStart" Height="300" Width="300" WindowStartupLocation="CenterScreen"
        StateChanged="Window_StateChanged" ResizeMode="CanMinimize" Closed="Window_Closed"
        Loaded="Window_Load" AllowDrop="True" Drop="Window_Drop">
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="退出" />
            <MenuItem Header="退出" Click="Quit"/>
        </ContextMenu>
    </Window.ContextMenu>
    <Grid>
        <WrapPanel>
            <Button Click="ViewDataBase">查看数据库</Button>
            <Button Click="OptiMizeDataBase">优化数据库</Button>
            <Button Click="CheckDataBase">检查数据库</Button>
            <Button Click="ShowSearch">打开搜索</Button>
        </WrapPanel>
    </Grid>
</Window>
